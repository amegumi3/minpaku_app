
<div class="show-view">
 <div class="room-wrapper">
  <% if @room.room_image.attached? %>
    <td><%= image_tag @room.room_image, class:"show-room-image" %>
  <% else %>
    <img src="https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg", class:"show-room-image" >  
  <% end %>
  <div class="room-info">
   <div class="show-user-image">
    <%= image_tag @room.user.image, class:"profile-image" %>
   </div>
   <div class="show-room-detail">
    <h5><%= @room.name %></h5>
    <p><%= @room.adress %></p>
   </div>
  </div>  
  <div class="show-room-introduction">
   <%= @room.introduction %>
  </div>
 </div>


 <div class="new-reservation">
  <h5>¥ <%= @room.price%> / 日</h5>
  <%= form_with model: @reservation, url: confirm_reservations_path, local: true do |f| %> 
   <div class="reservation-form">
    <p><%= f.label :start_date, "開始日" %></p>
    <p><%= f.datetime_field :start_date %></p>
   </div>
   <div class="reservation-form">
    <p><%= f.label :end_date, "終了日" %></p>
    <p><%= f.datetime_field :end_date %> </p>
   </div>
   <div class="reservation-form">
    <p><%= f.label :how_many, "人数" %></p>
    <p><%= f.number_field :how_many %></p>
   </div>
   <%= f.hidden_field :user_id, value: current_user.id %>
   <%= f.hidden_field :room_id, value: @room.id %>
   <%= f.submit "予約する",class: "submit" %>
  <% end %>
  </div>
</div>
