<div class= "table_wrapper">
  <%= form_with model: @user do |f| %>
  <table>
    <th>プロフィール</th>
    <td>  
      <% if @user.image.attached? %>
    <td><%= image_tag @user.image.variant(resize: "200")%></td>
    <% end %>
    </td>
    <tr>
     <th><%= f.label :price, "アイコン画像" %></th>
     <td><%= f.file_field :image %></td>
    </tr> 
    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction, "自己紹介" %></th>
      <td><%= f.text_field :introduction %></td>
    </tr>
  </table>
  <%= f.submit "更新",class: "submit" %>
  <% end %>
</div>
