<div class="view">
 <div class="nav">
  <ul>
   <li><%= link_to "アカウント", user_path %></li>
   <li><%= link_to "プロフィール", edit_user_path %></li>
  </ul>
 </div>
 <div class="form-wrapper color-form-wrapper">
  <div class= "form">
   <%= form_with model: @user do |f| %>
   <div class="row">
    <h5>プロフィール</h5>
   </div>
    <div class="image-row">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, class: "profile-image"%>
      <% else %> 
        <img class="profile-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">        
      <% end %>
    </div>
    <div class="row">
      <ul>
       <li><%= f.label :image, "アイコン画像" %></li>
       <li><%= f.file_field :image %></li>
      </ul>
    </div>
    <div class="row">
      <ul>
       <li><%= f.label :name, "名前" %></li>
       <li><%= f.text_field :name %></li>
      </ul>
    </div>
    <div class="row">
      <ul>
       <li><%= f.label :introduction, "自己紹介" %></li>
       <li><%= f.text_field :introduction %></li>
      </ul>
    </div>
    <%= f.submit "更新",class: "submit" %>
   </div>
   <% end %>
  </div>
 </div>
</div>
